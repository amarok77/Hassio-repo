    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Addon (Dev Backends)",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "bticino-x8000.backup",
            "args": ["--config", "bticino-x8000/dev/data/dev_options.json"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bticino-x8000"
            }
        },
        {
            "name": "Run Addon (Dev Drive)",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "bticino-x8000.backup",
            "args": ["--config", "bticino-x8000/dev/data/drive_dev_options.json"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bticino-x8000"
            }
        },
        {
            "name": "Run Addon (Real Google Drive)",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "bticino-x8000",
            "args": ["--config", "bticino-x8000/dev/data/drive_options.json"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bticino-x8000"
            }
        },
        {
            "name": "Run Mock Backend Server",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "bticino-x8000.dev.simulationserver",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bticino-x8000"
            }
        },
        {
            "name": "Run Error Analyzer",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "bticino-x8000.backup.util.error_analyzer",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bticino-x8000"
            }
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bticino-x8000"
            }
        },
        {
            "name": "Python Attach (Remote Debug docker addon)",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/bticino-x8000",  // You may also manually specify the directory containing your source code.
                    "remoteRoot": "/app" // Linux example; adjust as necessary for your OS and situation.
                }
            ],
            "port": 1627,                   // Set to the remote port.
            "host": "hassio",               // Set to your remote host's public IP address.
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bticino-x8000"
            }
        },
        {
            "name": "Run Auth Server",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "bticino-x8000.server",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bticino-x8000",
                "PORT": "12345",
                "CLIENT_SECRET": "client_secret",
                "CLIENT_ID": "client_id"
            }
        },
        {
            "name": "(DEV) Build/Upload Addon Container",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "bticino-x8000.dev.deploy_dev_addon",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bticino-x8000",
                "PORT": "12345",
                "CLIENT_SECRET": "client_secret",
                "CLIENT_ID": "client_id"
            }
        },
        {
            "name": "(PROD) Build/Upload Server Container",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "bticino-x8000.dev.deploy_server",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bticino-x8000",
                "PORT": "12345",
                "CLIENT_SECRET": "client_secret",
                "CLIENT_ID": "client_id"
            }
        },
        {
            "name": "(DEV) Build/Upload Server Container",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "bticino-x8000.dev.deploy_dev_server",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bticino-x8000",
                "PORT": "12345",
                "CLIENT_SECRET": "client_secret",
                "CLIENT_ID": "client_id"
            }
        },
        {
            "name": "(PROD) Build/Upload Addon Containers",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "bticino-x8000.dev.deploy_addon",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/bticino-x8000",
                "PORT": "12345",
                "CLIENT_SECRET": "client_secret",
                "CLIENT_ID": "client_id"
            }
        },
    ]
}
